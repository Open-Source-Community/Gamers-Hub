<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:padding="20dp"
    android:background="#00000000"
    tools:context=".Signing.SignIn">

    <EditText
        android:id="@+id/sign_in_EorU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/notactivebtn"
        android:drawableStart="@drawable/ic_person_24dp"
        android:drawablePadding="10dp"
        android:hint="Email or Username"
        android:imeOptions="actionNext"
        android:minWidth="350dp"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/osc_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_EorU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/notactivebtn"
        android:drawableStart="@drawable/ic_lock_24dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:minWidth="350dp"
        android:padding="10dp"
        android:password="true"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/osc_color"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_in_signbtn"
        android:background="@drawable/activebtn"
        android:text="SIGN IN"
        android:textColor="@color/osc_color"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_verified_user_24dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_below="@id/sign_in_password"
        android:layout_marginTop="40dp"/>
</RelativeLayout>