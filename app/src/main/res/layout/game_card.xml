<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:foreground="?selectableItemBackground"
    android:background="@drawable/notactivebtn"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notactivebtn"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/game_card_img"
            android:layout_width="75dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/game_card_name"
            android:layout_toEndOf="@id/game_card_img"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_card_name"
            android:layout_marginTop="25dp"
            android:textColor="#ffff00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_alignStart="@id/game_card_name"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/checked"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>