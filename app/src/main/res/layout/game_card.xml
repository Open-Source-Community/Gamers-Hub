<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:foreground="?selectableItemBackground"
    android:background="@drawable/rnd_dim"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notactivebtn"
        android:padding="10dp"
        >
        <ImageButton
            android:id="@+id/game_card_img"
            android:layout_width="64dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:src="@drawable/osc_logo"
            android:padding="10dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/game_card_name"
            android:layout_toEndOf="@id/game_card_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/osc_color"
            android:layout_alignParentTop="true"
            android:hint="Game Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="true"
            />
        <TextView
            android:id="@+id/game_card_platform"
            android:layout_toEndOf="@id/game_card_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:hint="Game Platform"
            android:textSize="18sp"
            android:layout_below="@id/game_card_name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="true" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/game_card_checked"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>