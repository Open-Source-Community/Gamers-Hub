<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminstrationLayouts.AdminMain">
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/admin_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/rnd_dim"
        android:foreground="?attr/selectableItemBackground"
        app:itemBackground="@color/default_bmb_dimColor"
        app:itemIconTint="@color/osc_color"
        app:itemTextColor="@color/osc_color"
        app:itemIconSize="24dp"
        android:textAlignment="center"
        app:menu="@menu/admin_navmenu" />

    <FrameLayout
        android:id="@+id/main_frame_container"
        android:layout_width="match_parent"
        android:layout_below="@id/admin_navbar"
        android:layout_marginTop="5dp"
        android:background="@drawable/rnd_dim"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent" />

</RelativeLayout>