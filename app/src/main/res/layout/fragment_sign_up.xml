<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:padding="20dp"
    android:background="#00000000"
    tools:context=".Signing.SignUp">
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="350dp"
        android:id="@+id/sign_up_username"
        android:hint="User Name"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_person_24dp"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:textColor="@color/osc_color"
        android:background="@drawable/notactivebtn"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="350dp"
        android:drawableStart="@drawable/ic_email_24dp"
        android:drawablePadding="10dp"
        android:id="@+id/sign_up_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/notactivebtn"
        android:textSize="20sp"
        android:layout_below="@id/sign_up_username"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/osc_color"
        android:layout_height="wrap_content" />

    <EditText android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="350dp"
        android:id="@+id/sign_up_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_lock_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/notactivebtn"
        android:textSize="20sp"
        android:layout_below="@id/sign_up_email"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/osc_color"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Accept our conditions and statements"
        android:textStyle="bold"
        android:textSize="18sp"
        android:buttonTint="@color/osc_color"
        android:textColor="@color/osc_color"
        android:padding="10dp"
        android:id="@+id/sign_up_accepting"
        android:layout_below="@id/sign_up_password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/activebtn"
        android:text="SIGN UP"
        android:id="@+id/sign_up_signbtn"
        android:textColor="@color/osc_color"
        android:drawableStart="@drawable/ic_verified_user_24dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/sign_up_accepting"
        android:layout_marginTop="40dp"/>
</RelativeLayout>