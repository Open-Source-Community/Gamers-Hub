<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Group_Main">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/signback"
        android:id="@+id/Group_main_cover"
    />
    <ImageButton
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_above="@id/Group_main_Name"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/osc_logo"
        android:id="@+id/Group_main_img"
        android:background="@drawable/profile_circular_border_imageview"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/Group_main_Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:hint="Group Name"
        android:textColor="@color/osc_color"
        android:layout_alignBottom="@id/Group_main_cover"/>
    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmbGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bmb_buttonEnum="textInsideCircle"
        app:bmb_piecePlaceEnum="piecePlace_dot_5_4"
        app:bmb_buttonPlaceEnum="buttonPlace_sc_5_4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        />
   <android.support.v7.widget.RecyclerView
        android:id="@+id/Group_main_recycler"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_below="@id/Group_main_cover"
        android:layout_height="match_parent"
        android:background="@drawable/rnd_dim"
        android:clipToPadding="false"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>